@model CareerCenter.MVC.Models.PostView

@{
    ViewData["Title"] = "Создания";
    Layout = "_LayoutAdmin";
}

<h1>@ViewData["Title"]</h1>

<h4>Публикация</h4>
<hr />
<div class="row">
    <div class="col-md-10">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group form-check">
                <label class="form-check-label adomx-checkbox">
                    <input class="form-check-input" type="checkbox" asp-for="IsActive">
                    <i class="icon"></i>@Html.DisplayNameFor(model => model.IsActive)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="CategoryId" class="control-label"></label>
                <select asp-for="CategoryId" class="form-control select2">
                    <option value="0">Не выбрано</option>
                    @if (ViewBag.Categories != null)
                    {
                        @foreach (PostCategoryView item in ViewBag.Categories)
                        {
                            <option value="@item.Id">@item.Title</option>
                        }
                    }
                </select>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            
                <div class="form-group">
                    <label asp-for="ImageFile" class="control-label"></label>
                    <input type="file" asp-for="ImageFile" class="form-control dropify" data-allowed-file-extensions="png jpg jpeg" />
                    <span asp-validation-for="ImageFile" class="text-danger"></span>
                </div>
            <div class="form-group">
                <label asp-for="Content" class="control-label"></label>
                <textarea class="form-control summernote" asp-for="Content"></textarea>
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IFile" class="control-label"></label>
                <input type="file" asp-for="IFile" class="form-control dropify" />
                <span asp-validation-for="IFile" class="text-danger"></span>
            </div>
            @*<div class="form-group">
                <label asp-for="File" class="control-label"></label>
                <input asp-for="File" class="form-control" />
                <span asp-validation-for="File" class="text-danger"></span>
            </div>*@

            @*<div class="form-group">
            <label asp-for="CretedAt" class="control-label"></label>
            <input asp-for="CretedAt" class="form-control" />
            <span asp-validation-for="CretedAt" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="UpdatedAt" class="control-label"></label>
            <input asp-for="UpdatedAt" class="form-control" />
            <span asp-validation-for="UpdatedAt" class="text-danger"></span>
        </div>*@
            <div class="form-group">
                <input type="submit" value="Создать" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="button button-apple" asp-action="Index">Назад</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
