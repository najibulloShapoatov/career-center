@model CareerCenter.MVC.Models.GalleryView

@{
    ViewData["Title"] = "Удаления";
    Layout = "_LayoutAdmin";
}

<h1>@ViewData["Title"]</h1>

<h3>Вы действительно хотите удалить?</h3>
<div>
    <h4>Галерея</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.File)
        </dt>
        <dd class = "col-sm-10">
            @*@Html.DisplayFor(model => model.File)*@
            <img src="~/uploads/@Model.File" alt="" />
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IsActive)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IsActive)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CretedAt)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CretedAt)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.UpdatedAt)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.UpdatedAt)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Удалить" class="btn btn-danger" /> |
        <a class="button button-apple" asp-action="Index">Назад</a>
    </form>
</div>
